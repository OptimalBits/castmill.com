<!-- This example requires Tailwind CSS v2.0+ -->
<div class="relative bg-white dark:bg-slate-900 pt-16 overflow-hidden">
  {% for item in collections.features %}
  {% set feature = item.data %}
    <div class="relative">

      <div class="lg:mx-auto lg:max-w-7xl lg:px-8 lg:grid lg:grid-cols-2 lg:grid-flow-col-dense lg:gap-24">
        <div class="px-4 max-w-xl mx-auto sm:px-6 lg:py-16 lg:max-w-none lg:mx-0 lg:px-0 {% if feature.side == 'right' %}lg:col-start-2{% endif %}">
          <div>
            <div class="mt-6">
              <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 dark:text-gray-300">{{ feature.title }}</h2>
              <p class="mt-4 text-lg text-gray-500">{{ feature.description }}</p>
              <div class="mt-6">
                <a href="{{ item.url }}" class="inline-flex px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700"> Read more </a>
              </div>
            </div>
          </div>
          {% if feature.testimonial %}
            <div class="mt-8 border-t border-gray-200 pt-6">
              <blockquote>
                <div>
                  <p class="text-base text-gray-500">&ldquo;{{ feature.testimonial.quote }}&rdquo;</p>
                </div>
                <footer class="mt-3">
                  <div class="flex items-center space-x-3">
                    <div class="flex-shrink-0">
                      <img class="h-8 w-8 rounded-full" src="{{ feature.testimonial.avatar | image(200) }}" alt="">
                    </div>
                    <div class="text-base font-medium text-gray-700 dark:text-gray-400">{{ feature.testimonial.name }}, {{ feature.testimonial.role }}</div>
                  </div>
                </footer>
              </blockquote>
            </div>
          {% endif %}
        </div>
        <div class="mt-12 sm:mt-16 lg:mt-0 {% if feature.side == 'right' %}lg:col-start-1{% endif %}">
          <div class="pl-4 -mr-48 sm:pl-6 md:-mr-16 lg:px-0 lg:m-0 lg:relative lg:h-full">
            {% if feature.side == 'left' %}
              <img class="w-full rounded-xl shadow-xl ring-1 ring-black ring-opacity-5 lg:absolute lg:left-0 lg:h-full lg:w-auto lg:max-w-none" src="{{ feature.image }}" alt="Inbox user interface">
            {% endif %}
            {% if feature.side == 'right' %}
              <img class="w-full rounded-xl shadow-xl ring-1 ring-black ring-opacity-5 lg:absolute lg:right-0 lg:h-full lg:w-auto lg:max-w-none" src="{{ feature.image }}" alt="Inbox user interface">
            {% endif %}
          </div>
        </div>
      </div>

      <div class="mt-24"></div>
    {% endfor %}

  </div>